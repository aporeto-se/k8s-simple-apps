#!/bin/bash -e

function main() {
  cd "$(dirname "$0")" || { err "unable to change directory"; return 2; }

  err "restarting nashville"
  ../../nashville/restart

  err "restarting knoxville"
  ../../knoxville/restart

    err "restarting memphis"
  ../../memphis/restart

  return 0
}

function err() { echo "$@" 1>&2; }

main "$@"
