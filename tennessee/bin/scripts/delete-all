#!/bin/bash -e

function main() {
  cd "$(dirname "$0")" || { err "unable to change directory"; return 2; }

  local fail
  fail=false

  err "deleting knoxville"
  ../../knoxville/delete || { fail=true; }

  err "deleting memphis"
  ../../memphis/delete || { fail=true; }

  err "deleting nashville"
  ../../nashville/delete || { fail=true; }

  # err "deleting group"
  # ../../group/delete || { fail=true; }

  # err "deleting cloud"
  # ../../cloud/delete || { fail=true; }

  "$fail" && { err "One or more failures"; return 3; }

  return 0
}

function err() { echo "$@" 1>&2; }

main "$@"
